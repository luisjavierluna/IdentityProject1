@model SignInViewModel

@{
    ViewData["Title"] = "Sign In";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h3 class="card-title text-center">Sign In</h3>
        <form asp-controller="Accounts" asp-action="SignIn" method="post" role="form">
            <div class="text-danger" asp-validation-summary="All"></div>

            <div class="row mt-4">
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="Name" class="col-md-2"></label>
                        <input asp-for="Name" class="form-control" placeholder="Write your name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="col-md-2"></label>
                        <input asp-for="Email" class="form-control" placeholder="Write your email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Url" class="col-md-2"></label>
                        <input asp-for="Url" class="form-control" placeholder="Write your url" />
                        <span asp-validation-for="Url" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CountryCode" class="col-md-2"></label>
                        <input asp-for="CountryCode" class="form-control" placeholder="Write your country code" />
                        <span asp-validation-for="CountryCode" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Phone" class="col-md-2"></label>
                        <input asp-for="Phone" class="form-control" placeholder="Write your phone" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Country" class="col-md-2"></label>
                        <input asp-for="Country" class="form-control" placeholder="Write your country" />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="City" class="col-md-2"></label>
                        <input asp-for="City" class="form-control" placeholder="Write your city" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Direction" class="col-md-2"></label>
                        <input asp-for="Direction" class="form-control" placeholder="Write your direction" />
                        <span asp-validation-for="Direction" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="BirthDay" class="col-md-4"></label>
                        <input type="text" name="BirthDay" class="form-control" id="datepicker" placeholder="Example: 1990-10-05" />
                        <span asp-validation-for="BirthDay" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="col-md-2"></label>
                        <input asp-for="Password" class="form-control" placeholder="Write your password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="col-md-2"></label>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    
                </div>
            </div>

            <div class="row">
                <div class="col-sm-10 offset-2">
                    <button type="submit" class="btn btn-success w-75 btn-lg">Sign In</button>
                </div>
            </div>

        </form>
    </div>
</div>



